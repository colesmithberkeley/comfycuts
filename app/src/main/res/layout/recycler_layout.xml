<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="4dp"
android:orientation="vertical">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/textViewName"
        android:padding="8dp"
        android:layout_marginRight="6dp"
        android:background="@color/cardview_dark_background"
        android:layout_alignParentRight="true"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp"
        android:text="Alice's Salon"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp" />

    <TextView
        android:id="@+id/textViewStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewName"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-6dp"
        android:text="★★★★★"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/colorStar"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView"
        android:layout_alignLeft="@id/textViewName"
        android:layout_toLeftOf="@id/imageView"
        android:autoLink="all"
        android:paddingRight="6dp"
        android:text="Hours: 12:00PM - 5:30 PM"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="?attr/editTextColor"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/downArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:text="▼" />

    <TextView
        android:id="@+id/textViewDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:paddingBottom="3dp"
        android:layout_toRightOf="@id/textViewName"
        android:layout_marginLeft="6dp"
        android:text="- 1.2 miles" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="256dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@id/textViewName"
        android:layout_below="@+id/textViewStars"
        android:layout_above="@id/textViewHours"
        android:text="TextView" />


</RelativeLayout>

</android.support.v7.widget.CardView>

